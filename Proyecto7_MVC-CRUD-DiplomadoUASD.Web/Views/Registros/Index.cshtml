@model IEnumerable<Proyecto7_MVC_CRUD_DiplomadoUASD.Web.Models.Users>

@{
    ViewBag.Title = "Usuarios Registrados";
}

<h2>Lista de Usuarios</h2>


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="row">
    <div class="col-sm-2">
    </div>
</div>
<div class="col-sm-10">
    <input class="form-control" id="input_search" name="search" type="text" placeholder="busqueda..." />
</div>



<div class="container">
    <!--<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Employee</button><br /><br />-->
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="table_body">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdUser }, new { @class = "btn btn-primary", @data_toggle = "modal", @data_target = "#myModal" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdUser }, new { @class = "btn btn-success", @data_toggle = "modal", @data_target = "#myModal" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdUser }, new { @class = "btn btn-danger", @data_toggle = "modal", @data_target = "#myModal" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
       
            <div class="modal-body">
                <form>

                </form>
                <div class="modal-footer">
                    
                </div>
                    
            </div>
        </div>
    </div>
</div>




@*Realizar la busquedad del lado del cliente*@
@section scripts
{
    <script>
            $(document).ready(function () {
                $("#input_search").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#table_body tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
    </script>
}
